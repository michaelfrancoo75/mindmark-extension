{
  "manifest_version": 3,
  "name": "MindMark — Intent-Aware Tab Saver",
  "version": "1.0.0",
  "description": "Capture the intent, summary, and next action for your current tab. 100% private — all processing happens locally.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "MindMark",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "offline_enabled": true,
  "minimum_chrome_version": "121",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}